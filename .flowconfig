[version]
0.98.0

[ignore]
<PROJECT_ROOT>/.circleci/.*
<PROJECT_ROOT>/cypress/.*
<PROJECT_ROOT>/k8s/.*
<PROJECT_ROOT>/website/.*

[libs]
flow-typed

[include]
<PROJECT_ROOT>/packages/

[options]
emoji=true
include_warnings=true

server.max_workers=2

module.name_mapper.extension='graphql' -> '<PROJECT_ROOT>/flow-extensions/graphql.js'

suppress_type=$FlowIssue
suppress_type=$FlowFixMe

[strict]
nonstrict-import
unclear-type
unsafe-getters-setters
untyped-import
untyped-type-import
